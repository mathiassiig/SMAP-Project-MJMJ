<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="examproject.group22.roominator.Activities.AddProductActivity"
    tools:showIn="@layout/activity_add_product">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/addproduct_etName"
        android:layout_alignBaseline="@+id/addproduct_txtName"
        android:layout_alignBottom="@+id/addproduct_txtName"
        android:layout_toRightOf="@+id/addproduct_txtName"
        android:layout_toEndOf="@+id/addproduct_txtName"
        android:layout_marginLeft="20dp"
        android:hint="Indtast produkt"
        android:inputType="text|textCapSentences" />

    <TextView
        android:text="@string/addproduct_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addproduct_txtName"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
